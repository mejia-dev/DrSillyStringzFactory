@{
  Layout = "_Layout";
}

@using Factory.Models;

<h2>@ViewBag.PageTitle</h2>

@if (@Model.Count == 0)
{
  <p class="error">No engineers have been added yet.</p>
} 

@foreach (Engineer e in Model)
{
  <li>@Html.ActionLink($"{e.EngineerFullName}", "Details", new { id = e.EngineerId })</li>
}

<p>@Html.ActionLink("Add new engineer", "Create")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>