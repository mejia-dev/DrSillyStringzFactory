@{
  Layout = "_Layout";
}

@using Factory.Models;

<h2>@ViewBag.PageTitle</h2>

@if (@Model.Count == 0)
{
  <p class="error">No machines have been added yet.</p>
} 

@foreach (Machine mcn in Model)
{
  <li>@Html.ActionLink($"{mcn.MachineName}", "Details", new { id = mcn.MachineId })</li>
}

<p>@Html.ActionLink("Add New Machine", "Create")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>