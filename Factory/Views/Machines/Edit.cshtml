@{
  Layout = "_Layout";
}

@model Factory.Models.Machine
@using Factory.Models;

<h2>@ViewBag.PageTitle</h2>

@using ( Html.BeginForm())
{
  @Html.HiddenFor(model => model.MachineId)
  @Html.HiddenFor(model => model.MachineEngineers)
  <p>
    Machine Name: @Html.TextBoxFor(model => model.MachineName)<br />
    @Html.ValidationMessageFor(model => model.MachineName, "", new { @class = "error" })
  </p>
  <input type="submit" value="Confirm Changes" /><br />
  @Html.ActionLink("Discard Changes", "Details", new {id = @Model.MachineId})
}
<br /><br />
@Html.ActionLink("Back to All Machines", "Index")